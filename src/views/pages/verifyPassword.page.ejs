<div class="loginWapper container">
  <div class="loginWapper__formWapper row justify-content-center">
    <form action="/register/password" method="post" class="loginWapper__formWapper__form col-sm-12 col-md-6">
      <div class="mb-3">
        <% 
          let email = '' 
          if(data && data.email){
            email = data.email;
          }
        %>
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input type="email" name="email" value="<%=email%>" readonly="readonly" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <% if(errors?.email){ %>
        <div id="emailHelp" class="form-text error-form"><%=errors.email%></div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Họ tên</label>
        <input type="text" name="fullname" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Xác nhận mật khẩu</label>
        <input type="password" name="confirmPassword" class="form-control" id="exampleInputPassword1">
      </div>
      <button type="submit" class="btn btn-primary w-100">Xác nhận</button>
      <% if(errors){ %>
      <div id="emailHelp" class="form-text error-form"><%=errors%></div>
      <% } %>
      <% if(info){ %>
      <div id="emailHelp" class="form-text"><%=info%></div>
      <% } %>
      <div class="or">hoặc</div>
      <div class="other-login row justify-content-between">
        <div class="other-login__content">
          <a href="/login?provider=google" class="other-login__content__link">
            <img src="https://img.icons8.com/color/30/FFFFFF/google-logo.png" />
            <span class="text">google</span>
          </a>
        </div>
        <div class="other-login__content">
          <a href="/login?provider=facebook" class="other-login__content__link">
            <img src="https://img.icons8.com/color/30/000000/facebook-new.png" />
            <span class="text">facebook</span>
          </a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- import layout -->
<% layout('../common/base') -%>
<% block('title', 'register' ); -%>
<% stylesheet('/styles/login.css') -%>